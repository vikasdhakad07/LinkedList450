Method 1:TC->O(m+n),SC->O(m+n)

class Sol
{
   public static Node findIntersection(Node head1, Node head2)
    {
        // code here.
        Node ptr1=head1;
        Node ptr2=head2;
        Node curr=null;
        Node head=null;
        
        while(ptr1!=null&&ptr2!=null){
            if(ptr1.data==ptr2.data){
            if(head==null){
                Node t=new Node(ptr1.data);
                curr=t;
                head=t;
            }else{
                Node t=new Node(ptr2.data);
                curr.next=t;
                curr=curr.next;
            }
            ptr1=ptr1.next;
            ptr2=ptr2.next;
        }
        else{
            if(ptr1.data<ptr2.data){
                ptr1=ptr1.next;
            }else{
                ptr2=ptr2.next;
            }
        }
        }
        return head;
    }
}
